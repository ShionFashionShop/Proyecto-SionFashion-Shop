@model SionFashioWebApplicationMVC.Models.paise

@{
    ViewData["Title"] = "Crear País";
}

<h1>Crear País</h1>

<h4>País</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group">
                <h6>Nombre del país</h6>
                <input asp-for="nombre_pais" class="form-control" placeholder="Ingrese el nombre del pais"/>
                <span asp-validation-for="nombre_pais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary mt-4" />
                <a asp-action="Index" class="btn btn-secondary mt-4">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
