@model SionFashioWebApplicationMVC.Models.paise
@{
    ViewData["Title"] = "Eliminar País";
}

<h1>Eliminar País</h1>

<h4>País</h4>
<hr />

<p>¿Estás seguro de que deseas eliminar este país?</p>

<div>
    <h4>@Model.nombre_pais</h4>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="id_pais" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var deleteButton = document.querySelector('.btn-danger');
            deleteButton.addEventListener('click', function (event) {
                event.preventDefault();
                Swal.fire({
                    title: '¿Estás seguro?',
                    text: "Esta acción no se puede deshacer",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        event.target.closest('form').submit();
                    }
                });
            });
        });
    </script>
}
