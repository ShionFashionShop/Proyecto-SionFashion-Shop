@model IEnumerable<SionFashioWebApplicationMVC.Models.ciudade>

@{
    ViewData["Title"] = "Index";

    // Definir funciones auxiliares para usar nombres cortos
    Func<ciudade, string> nombreCiudad = c => c.nombre_ciudad;
    Func<ciudade, int> idDepartamento = c => c.id_departamentoNavigation.id_departamento;
}

<h1>Ciudades</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Departamento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@nombreCiudad(c)</td>
                <td>@idDepartamento(c)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@c.id_ciudad">Edit</a> |
                    <a asp-action="Details" asp-route-id="@c.id_ciudad">Details</a> |
                    <a asp-action="Delete" asp-route-id="@c.id_ciudad">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
