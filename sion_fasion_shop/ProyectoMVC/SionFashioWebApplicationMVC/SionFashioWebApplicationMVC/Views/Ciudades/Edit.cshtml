@model SionFashioWebApplicationMVC.Models.ciudade

@{
    ViewData["Title"] = "Edit City";
}

<h1>Edit City</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_ciudad" />
            <div class="form-group">
                <h6>Nombre ciudad</h6>
                <input asp-for="nombre_ciudad" class="form-control" />
                <span asp-validation-for="nombre_ciudad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>Nombre departamento</h6>
                <select asp-for="id_departamento" class="form-control" asp-items="ViewBag.id_departamento">
                    <option value="">Seleccione un departamento</option> <!-- Optional placeholder -->
                </select>
                <span asp-validation-for="id_departamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary mt-4" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary mt-2" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}