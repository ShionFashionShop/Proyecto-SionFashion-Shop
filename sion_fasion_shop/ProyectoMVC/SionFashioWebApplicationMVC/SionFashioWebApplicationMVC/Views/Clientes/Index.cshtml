@model IEnumerable<SionFashioWebApplicationMVC.Models.cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Crear Nuevo Cliente</a>
</p>

<table id="clientesTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.id_cliente</td>
                <td>@cliente.nombre_cliente</td>
                <td>@cliente.email_cliente</td>
                <td>@cliente.telefono_cliente</td>
                <td>@cliente.direccion_cliente</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@cliente.id_cliente">Detalles</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@cliente.id_cliente">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@cliente.id_cliente">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#clientesTable').DataTable({
                // Puedes personalizar la configuración aquí
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/es.json' // Configuración en español
                }
            });
        });
    </script>
}
