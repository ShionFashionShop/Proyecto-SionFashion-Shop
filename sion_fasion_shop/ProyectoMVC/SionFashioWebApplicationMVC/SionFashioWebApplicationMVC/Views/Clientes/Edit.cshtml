@model SionFashioWebApplicationMVC.Models.cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<h1>Editar Cliente</h1>

<h4>Cliente</h4>
<hr />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="id_cliente" class="control-label"></label>
        <input asp-for="id_cliente" class="form-control" readonly />
        <span asp-validation-for="id_cliente" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="nombre_cliente" class="control-label"></label>
        <input asp-for="nombre_cliente" class="form-control" />
        <span asp-validation-for="nombre_cliente" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="email_cliente" class="control-label"></label>
        <input asp-for="email_cliente" class="form-control" />
        <span asp-validation-for="email_cliente" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="telefono_cliente" class="control-label"></label>
        <input asp-for="telefono_cliente" class="form-control" />
        <span asp-validation-for="telefono_cliente" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="direccion_cliente" class="control-label"></label>
        <input asp-for="direccion_cliente" class="form-control" />
        <span asp-validation-for="direccion_cliente" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
