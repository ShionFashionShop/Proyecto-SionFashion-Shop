@model IEnumerable<SionFashioWebApplicationMVC.Models.role>

@{
    ViewData["Title"] = "Index";

    // Definir funciones auxiliares para usar nombres cortos
    Func<role, string> nombreRol = r => r.nombre_rol;
    Func<role, string> descripcionRol = r => r.descripcion_rol;
}

<h1>Roles</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@nombreRol(r)</td>
                <td>@descripcionRol(r)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@r.id_rol">Edit</a> |
                    <a asp-action="Details" asp-route-id="@r.id_rol">Details</a> |
                    <a asp-action="Delete" asp-route-id="@r.id_rol">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
