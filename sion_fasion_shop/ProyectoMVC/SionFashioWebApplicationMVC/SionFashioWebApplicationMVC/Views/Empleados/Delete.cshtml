@model SionFashioWebApplicationMVC.Models.empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<h1>Eliminar Empleado</h1>

<h4>Empleado</h4>
<hr />

<p>¿Estás seguro de que deseas eliminar este empleado?</p>

<div>
    <h4>@Model.nombres_empleado @Model.apellidos_empleado</h4>
    <dl class="row">
        <dt class="col-sm-3">DNI</dt>
        <dd class="col-sm-9">@Model.dni_empleado</dd>

        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.nombres_empleado</dd>

        <dt class="col-sm-3">Apellidos</dt>
        <dd class="col-sm-9">@Model.apellidos_empleado</dd>

        <dt class="col-sm-3">Teléfono</dt>
        <dd class="col-sm-9">@Model.telefono_empleado</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.email_empleado</dd>

        <dt class="col-sm-3">Ciudad</dt>
        <dd class="col-sm-9">@Model.id_ciudadNavigation.nombre_ciudad</dd>

        <dt class="col-sm-3">Tienda</dt>
        <dd class="col-sm-9">@Model.id_tiendaNavigation.nombre_tienda</dd>
    </dl>
</div>

<form asp-action="Delete" method="post" id="deleteForm">
    <input type="hidden" asp-for="id_empleado" />
    <button type="button" id="confirmDelete" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('confirmDelete').addEventListener('click', function () {
                Swal.fire({
                    title: '¿Estás seguro?',
                    text: "Esta acción no se puede deshacer",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        document.getElementById('deleteForm').submit();
                    }
                });
            });
        });
    </script>
}
