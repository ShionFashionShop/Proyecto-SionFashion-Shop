@model IEnumerable<SionFashioWebApplicationMVC.Models.categoria>

@{
    ViewData["Title"] = "Index";

    // Definir funciones auxiliares para usar nombres cortos
    Func<categoria, string> nombreCategoria = c => c.nombre_categoria;
}

<h1>Categorías</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@nombreCategoria(c)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@c.id_categoria">Edit</a> |
                    <a asp-action="Details" asp-route-id="@c.id_categoria">Details</a> |
                    <a asp-action="Delete" asp-route-id="@c.id_categoria">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
