@model SionFashioWebApplicationMVC.Models.categoria

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_categoria" />
            <div class="form-group">
                <h6>Nombre de la categoria</h6>
                <input asp-for="nombre_categoria" class="form-control" />
                <span asp-validation-for="nombre_categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mt-4" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary mt-2" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
