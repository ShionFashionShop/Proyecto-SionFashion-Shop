@model SionFashioWebApplicationMVC.Models.departamento

@{
    ViewData["Title"] = "Edit";
   
}

<h1>Edit</h1>

<h4>departamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_departamento" />
            <div class="form-group">
                Nombre del departamento
                <input asp-for="nombre_departamento" class="form-control" />
                <span asp-validation-for="nombre_departamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>Pais</h6>
                <select asp-for="id_pais" class="form-control" asp-items="ViewBag.id_pais"></select>
                <span asp-validation-for="id_pais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mt-4" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary"  asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
