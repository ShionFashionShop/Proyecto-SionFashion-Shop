@model IEnumerable<SionFashioWebApplicationMVC.Models.alertas_stock>

@{
    ViewData["Title"] = "Index";

    // Definir funciones auxiliares para usar nombres cortos
    Func<alertas_stock, int> nivelMinimo = a => a.nivel_minimo;
    Func<alertas_stock, DateTime> fechaAlerta = a => a.fecha_alerta;
    Func<alertas_stock, int> idProducto = a => a.id_productoNavigation.id_producto;
}

<h1>Alertas de Stocks</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nivel Mínimo</th>
            <th>Fecha de Alerta</th>
            <th>Producto</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@nivelMinimo(a)</td>
                <td>@fechaAlerta(a).ToShortDateString()</td>
                <td>@idProducto(a)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@a.id_alerta">Edit</a> |
                    <a asp-action="Details" asp-route-id="@a.id_alerta">Details</a> |
                    <a asp-action="Delete" asp-route-id="@a.id_alerta">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
