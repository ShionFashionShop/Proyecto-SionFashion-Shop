@model IEnumerable<SionFashioWebApplicationMVC.Models.alertas_stock>

@{
    ViewData["Title"] = "Alertas de Stocks";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Crear Nueva Alerta</a>
</p>

<table id="alertasStockTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nivel Mínimo</th>
            <th>Fecha de Alerta</th>
            <th>Producto</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.nivel_minimo</td>
                <td>@item.fecha_alerta.ToShortDateString()</td>
                <td>@item.id_productoNavigation.nombre_producto</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.id_alerta">Detalles</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.id_alerta">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.id_alerta">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#alertasStockTable').DataTable({
                // Puedes personalizar la configuración aquí
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/es.json' // Configuración en español
                }
            });
        });
    </script>
}
