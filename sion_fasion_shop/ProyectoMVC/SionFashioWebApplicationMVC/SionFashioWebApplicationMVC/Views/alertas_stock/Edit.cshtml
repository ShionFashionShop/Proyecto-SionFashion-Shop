@model SionFashioWebApplicationMVC.Models.alertas_stock

@{
    ViewData["Title"] = "Editar ";
}

<h1>@ViewData["Title"]</h1>

<h4>Editar Alerta de Stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_alerta" />

            <div class="form-group">
                <label asp-for="id_producto" class="control-label"></label>
                <select asp-for="id_producto" class="form-control" asp-items="ViewBag.id_producto"></select>
                <span asp-validation-for="id_producto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="nivel_minimo" class="control-label"></label>
                <input asp-for="nivel_minimo" class="form-control" />
                <span asp-validation-for="nivel_minimo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="fecha_alerta" class="control-label"></label>
                <input asp-for="fecha_alerta" class="form-control" />
                <span asp-validation-for="fecha_alerta" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
