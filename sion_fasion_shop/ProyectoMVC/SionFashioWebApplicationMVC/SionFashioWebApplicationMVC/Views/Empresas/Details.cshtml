@model SionFashioWebApplicationMVC.Models.empresa

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div class="card">
    <div class="card-header">
        Detalles de la empresa
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nombre de la empresa</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.nombre_empresa)</dd>

        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.id_empresa" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
