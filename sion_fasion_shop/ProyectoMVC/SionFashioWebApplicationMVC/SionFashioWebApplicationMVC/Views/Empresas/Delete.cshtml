@model SionFashioWebApplicationMVC.Models.empresa

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>¿Estas seguro de querer eliminar?</h3>
<div>
    <h4>Empresa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre empresa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre_empresa)
        </dd>
        <dt class="col-sm-2">
            Direccion empresa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.direccion_empresa)
        </dd>
        <dt class="col-sm-2">
            Telefono empresa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.telefono_empresa)
        </dd>
        <dt class="col-sm-2">
            E-mail empresa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.email_empresa)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id_empresa" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>
