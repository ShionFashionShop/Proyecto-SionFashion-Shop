@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5 text-center">
    <h1 class="display-3 text-dark">Bienvenido a su sistema de inventario</h1>
    <p class="lead text-muted">Gestione y realice un seguimiento eficaz de su inventario con nuestras herramientas.</p>
    <a class="btn btn-lg btn-outline-primary shadow-sm" href="https://localhost:7180/Identity/Account/Login" role="button">Get Started</a>
</div>

<!-- Carrusel de imágenes moderno -->
<div id="inventoryCarousel" class="carousel slide mt-5" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#inventoryCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#inventoryCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#inventoryCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://media.gettyimages.com/id/1367106352/es/foto/un-trabajador-del-almac%C3%A9n-hace-un-inventario-en-la-sala-de-almacenamiento.jpg?s=612x612&w=0&k=20&c=LOmYZm_Dd-gYngcrTxM4Z9kbtnGKMXcAuVKQk6OCHC8=" class="d-block w-100" alt="Inventory System Slide 1">
            <div class="carousel-caption d-none d-md-block">
                <div class="bg-dark bg-opacity-50 p-3 rounded">
                    <h5 class="text-white">Gestión eficaz del inventario</h5>
                    <p class="text-white">Realice un seguimiento de productos y proveedores con facilidad.</p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://media.istockphoto.com/id/1434437996/es/foto/mujer-escribiendo-a-mano-en-el-portapapeles-con-un-bol%C3%ADgrafo.webp?a=1&b=1&s=612x612&w=0&k=20&c=dJY6wQAHYsiWJR2w2e_mNx1HJwgmKtTH4TlJ0oca4J4=" class="d-block w-100" alt="Inventory System Slide 2">
            <div class="carousel-caption d-none d-md-block">
                <div class="bg-dark bg-opacity-50 p-3 rounded">
                    <h5 class="text-white">Análisis en tiempo real</h5>
                    <p class="text-white">Genere informes detallados y controle sus existencias en tiempo real.</p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://media.istockphoto.com/id/2149061307/es/foto/distribuci%C3%B3n-inventario-y-mujer-con-tablet-stock-e-industria-con-almacenaje-y-negocio-env%C3%ADos.webp?a=1&b=1&s=612x612&w=0&k=20&c=-o_VN_YqbIP2N79rtX4juAtBCuo3I0eRUxmuzns4VRA=" class="d-block w-100" alt="Inventory System Slide 3">
            <div class="carousel-caption d-none d-md-block">
                <div class="bg-dark bg-opacity-50 p-3 rounded">
                    <h5 class="text-white">Optimizado para la productividad</h5>
                    <p class="text-white">Mejore sus flujos de trabajo con nuestro sistema intuitivo.</p>
                </div>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#inventoryCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#inventoryCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- Custom Styles -->
<style>
    .hover-card:hover {
        transform: translateY(-5px);
        transition: all 0.3s ease;
    }

    .stat-card {
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            background-color: #f8f9fa;
            transition: all 0.3s ease;
        }

    .btn-outline-primary {
        border: 2px solid #007bff;
        color: #007bff;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
        }

    /* Estilos del carrusel */
    .carousel-caption h5 {
        font-size: 2rem;
        font-weight: bold;
    }

    .carousel-caption p {
        font-size: 1.2rem;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 50%;
    }

    .carousel-inner img {
        object-fit: cover;
        height: 500px;
    }

</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
