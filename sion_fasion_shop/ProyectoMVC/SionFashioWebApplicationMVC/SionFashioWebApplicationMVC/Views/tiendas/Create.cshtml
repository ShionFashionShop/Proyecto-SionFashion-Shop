@model SionFashioWebApplicationMVC.Models.tienda

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>tienda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h6>Nombre tienda</h6>
                <input asp-for="nombre_tienda" class="form-control" />
                <span asp-validation-for="nombre_tienda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>Telefono tienda</h6>
                <input asp-for="telefono_tienda" class="form-control" />
                <span asp-validation-for="telefono_tienda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>Ubicacion tienda</h6>
                <input asp-for="ubicacion_tienda" class="form-control" />
                <span asp-validation-for="ubicacion_tienda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>Ciudad</h6>
                <select asp-for="id_ciudad" class ="form-control" asp-items="ViewBag.id_ciudad"></select>
            </div>
            <div class="form-group">
                <h6>Empresa</h6>
                <select asp-for="id_empresa" class ="form-control" asp-items="ViewBag.id_empresa"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-4" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary"       asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
