@model SionFashioWebApplicationMVC.Models.sub_categoria

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>sub_categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_sub_categoria" />
