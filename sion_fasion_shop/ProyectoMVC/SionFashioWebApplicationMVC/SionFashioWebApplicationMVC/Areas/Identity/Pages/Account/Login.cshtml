@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesion";
}

<style>
    body {
        background-color: #f8f9fa; /* Fondo claro */
    }

    h1, h2 {
        color: #343a40; /* Color de texto */
        text-align: center; /* Centramos el texto */
    }

    .form-control {
        border-radius: 25px; /* Bordes redondeados */
    }

    .btn-primary {
        border-radius: 25px; /* Bordes redondeados en botones */
        background-color: #007bff; /* Color de fondo del botón */
        border: none; /* Sin borde */
    }

    .btn-primary:hover {
        background-color: #0056b3; /* Color de fondo del botón al pasar el ratón */
    }

    .text-danger {
        font-weight: bold; /* Texto de error en negrita */
    }

    .rounded {
        border-radius: 10px; /* Bordes redondeados para secciones */
    }

    .shadow {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Sombra para secciones */
    }

    .mt-5 {
        margin-top: 3rem; /* Margen superior */
    }

    .text-center {
        text-align: center; /* Centramos el texto */
    }
</style>

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <section class="border rounded p-4 shadow">
                <form id="account" method="post">
                    <h2>Inicia con tu cuenta</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" required />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" required />
                        <label asp-for="Input.Password" class="form-label">Contraseña</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div class="text-center">
                        <button id="login-submit" type="submit" class="btn btn-primary w-100">Conectarse</button>
                    </div>
                    <div class="text-center mt-3">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">¿Ha olvidado su contraseña?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse como nuevo usuario</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmacion por correo electronico</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
